<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zephgv.mad.beastfitness">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/llogo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/bgmi"
        android:supportsRtl="true"
        android:theme="@style/Theme.BeastFitness">
        <activity
            android:name="com.klein.madly.kleinfitness.CalActivity"
            android:exported="false" />
        <activity
            android:name="com.klein.madly.kleinfitness.YogaActivity"
            android:exported="false" />
        <activity
            android:name="com.klein.madly.kleinfitness.WorkoutActivity"
            android:exported="false" />
        <activity
            android:name="com.klein.madly.kleinfitness.WellnessActivity"
            android:exported="false" />
        <activity
            android:name="com.klein.madly.kleinfitness.TipsActivity"
            android:exported="false" />
        <activity
            android:name="com.klein.madly.kleinfitness.DietActivity"
            android:exported="false" />
        <activity
            android:name="com.klein.madly.kleinfitness.GoogleSignInActivity"
            android:exported="false" />
        <activity
            android:name="com.klein.madly.kleinfitness.RegisterActivity"
            android:exported="false" />
        <activity
            android:name="com.klein.madly.kleinfitness.LoginActivity"
            android:exported="false" />
        <activity
            android:name="com.klein.madly.kleinfitness.BmicalcActivity"
            android:exported="false" />
        <activity
            android:name="com.klein.madly.kleinfitness.BmiActivity"
            android:exported="false" />
        <activity
            android:name="com.klein.madly.kleinfitness.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.klein.madly.kleinfitness.MainActivity"
            android:exported="true" />

        <service
            android:name="com.klein.madly.kleinfitness.PushNotificationService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSENGING_EVENT" />
            </intent-filter>
        </service>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>